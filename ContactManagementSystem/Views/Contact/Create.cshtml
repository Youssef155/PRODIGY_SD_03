@model ContactManagementSystem.Models.ContactInfoViewModel;

<div class="row">
    <div class="col-6">
        <div class="card">

            <div class="card-header">
                <h5>Create new contact</h5>
            </div>

            <div class="card-body">
                <form asp-controller="Contact" asp-action="CreateContact" method="post">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input asp-for=Name type="text" class="form-control" />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input asp-for=PhoneNumber type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for=Email type="email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <button class="btn-danger" type="submit"> Save </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>